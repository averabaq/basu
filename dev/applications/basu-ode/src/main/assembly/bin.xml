<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<includeBaseDirectory>true</includeBaseDirectory>	
	<moduleSets>
		<moduleSet>
			<sources>
				<fileSets>
					<fileSet>
						<outputDirectory>doc/${module.artifactId}</outputDirectory>
						<directory>target/site</directory>						
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>
	<formats>
		<format>tar.gz</format>
		<!-- 
		<format>tar.bz2</format>
		<format>zip</format>
		 -->
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/../../..</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>README*</include>
				<include>LICENSE*</include>
				<include>NOTICE*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../../../license</directory>
			<outputDirectory>/lib</outputDirectory>
			<includes>
				<include>*LICENSE</include>
			</includes>
		</fileSet>		
		<fileSet>
			<directory>src/bin</directory>
			<outputDirectory>/bin</outputDirectory>			
			<includes>
				<include>cbi4api-basu-ode.sh</include>
			</includes>			
			<fileMode>754</fileMode>
		</fileSet> 
		<fileSet>
			<directory>${project.basedir}/../../modules/event-publisher/src/main/resources</directory>
			<outputDirectory>/conf</outputDirectory>
			<includes>
				<include>event-publisher.properties</include>
			</includes>
			<fileMode>644</fileMode>
		</fileSet>  		   	
	</fileSets>
	
	<files>
		<file>
			<source>${project.basedir}/../../modules/event-publisher/target/event-publisher-${project.version}.jar</source>
			<outputDirectory>/bin</outputDirectory>
			<destName>cbi4api-basu-ode.jar</destName>
			<fileMode>644</fileMode>
		</file>
	</files>
	
	<dependencySets>
		  		 
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<includes>
				<include>*:jar</include>
			</includes>
			<excludes>
				<exclude>es.uc3m.softlab.cbi4bi.basu:event-publisher</exclude>
			</excludes>
			<outputDirectory>/lib</outputDirectory>
			<useTransitiveDependencies>true</useTransitiveDependencies>
		</dependencySet>
		 
