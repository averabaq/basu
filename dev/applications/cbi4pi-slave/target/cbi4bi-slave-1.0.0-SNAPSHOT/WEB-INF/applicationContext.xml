<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                        http://www.springframework.org/schema/context
						http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<import resource="classpath:spring-event-store.xml"/>
	<import resource="classpath:spring-event-subscriber.xml"/>
	
	<context:component-scan base-package="es.uc3m.softlab.cbi4pi.slave.web" />
	
	<bean class="org.springframework.beans.factory.config.CustomScopeConfigurer">
		<property name="scopes">
			<map>
				<entry key="view">
					<bean class="org.primefaces.spring.scope.ViewScope" />
				</entry>
			</map>
		</property>
	</bean>
</beans>