<persistence xmlns="http://java.sun.com/xml/ns/persistence"  
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"  
             version="1.0">  
    <!-- cbi4api.basu Event Store Persistence Unit -->
	<persistence-unit name="${cbi4api.basu.event.store.persistence.unit.name}" transaction-type="RESOURCE_LOCAL">
		<provider>${cbi4api.basu.event.store.persistence.jpa.provider}</provider>
		<properties>
			<property name="datanucleus.jpa.addClassTransformer" value="false" />
			<property name="datanucleus.managedRuntime" value="false" />
			<property name="datanucleus.ConnectionURL" value="hbase" />
			<property name="datanucleus.ConnectionUserName" value="" />
			<property name="datanucleus.ConnectionPassword" value="" />
			<property name="datanucleus.autoCreateSchema" value="true" />
			<property name="datanucleus.validateTables" value="false" />
			<property name="datanucleus.Optimistic" value="false" />
			<property name="datanucleus.validateConstraints" value="false" />
		</properties>
		<!-- Properties are set through the applicationContext descriptor file
		<properties>
			<property name="openjpa.hbm2ddl.auto"	value="${cbi4api.basu.event.store.openjpa.persistence.mode}"/>       
			<property name="openjpa.dialect" value="${cbi4api.basu.event.store.openjpa.dialect}"/>
			<property name="openjpa.show_sql" value="${cbi4api.basu.event.store.openjpa.show_sql}"/>
			<property name="openjpa.archive.autodetection" value="${cbi4api.basu.event.store.openjpa.archive.autodetection}"/>
			<property name="openjpa.connection.driver_class" value="${cbi4api.basu.event.store.datasource.driver}"/>
			<property name="openjpa.connection.username" value="${cbi4api.basu.event.store.datasource.username}"/>
			<property name="openjpa.connection.password" value="${cbi4api.basu.event.store.datasource.password}"/>
			<property name="openjpa.connection.url" value="${cbi4api.basu.event.store.datasource.url}"/>
			<property name="openjpa.dialect" value="${cbi4api.basu.event.store.openjpa.dialect}"/>
		</properties>
		-->
	</persistence-unit>
</persistence>