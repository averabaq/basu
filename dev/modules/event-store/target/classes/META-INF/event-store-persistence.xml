<persistence xmlns="http://java.sun.com/xml/ns/persistence"  
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"  
             version="1.0">  
    <!-- cbi4pi.slave Event Store Persistence Unit -->
	<persistence-unit name="cbi4pi-slave-event-store">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>		

		<!-- Properties are set through the applicationContext descriptor file
		<properties>
			<property name="hibernate.hbm2ddl.auto"	value="update"/>       
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
			<property name="hibernate.show_sql" value="false"/>
			<property name="hibernate.archive.autodetection" value="class"/>
			<property name="hibernate.connection.driver_class" value="org.postgresql.xa.PGXADataSource"/>
			<property name="hibernate.connection.username" value="cbi4pi-slave"/>
			<property name="hibernate.connection.password" value="cbi4pi-slave%123$x"/>
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/cbi4pi-slave"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
		</properties>
		-->
	</persistence-unit>
</persistence>