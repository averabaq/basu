<persistence xmlns="http://java.sun.com/xml/ns/persistence"  
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"  
             version="1.0">  
    <!-- cbi4api.basu Event Store Persistence Unit -->
	<persistence-unit name="cbi4api-basu-event-store" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>es.uc3m.softlab.cbi4api.basu.event.store.entity.HSource</class>
		<class>es.uc3m.softlab.cbi4api.basu.event.store.entity.HModel</class>
		<class>es.uc3m.softlab.cbi4api.basu.event.store.entity.HProcessInstance</class>
		<class>es.uc3m.softlab.cbi4api.basu.event.store.entity.HActivityInstance</class>
		<class>es.uc3m.softlab.cbi4api.basu.event.store.entity.HSequenceGenerator</class>
		<class>es.uc3m.softlab.cbi4api.basu.event.store.entity.HEvent</class>
		<class>es.uc3m.softlab.cbi4api.basu.event.store.entity.HEventCorrelation</class>
		<class>es.uc3m.softlab.cbi4api.basu.event.store.entity.HEventData</class>
		<class>es.uc3m.softlab.cbi4api.basu.event.store.entity.HEventPayload</class>
		<class>es.uc3m.softlab.cbi4api.basu.event.store.entity.HProcessMapping</class>
		<class>es.uc3m.softlab.cbi4api.basu.event.store.entity.HProcessModelMapping</class>
		<!-- Properties are set through the applicationContext descriptor file
		<properties>
			<property name="openjpa.hbm2ddl.auto"	value="${cbi4api.basu.event.store.openjpa.persistence.mode}"/>       
			<property name="openjpa.dialect" value="${cbi4api.basu.event.store.openjpa.dialect}"/>
			<property name="openjpa.show_sql" value="${cbi4api.basu.event.store.openjpa.show_sql}"/>
			<property name="openjpa.archive.autodetection" value="${cbi4api.basu.event.store.openjpa.archive.autodetection}"/>
			<property name="openjpa.connection.driver_class" value="${cbi4api.basu.event.store.datasource.driver}"/>
			<property name="openjpa.connection.username" value="${cbi4api.basu.event.store.datasource.username}"/>
			<property name="openjpa.connection.password" value="${cbi4api.basu.event.store.datasource.password}"/>
			<property name="openjpa.connection.url" value="${cbi4api.basu.event.store.datasource.url}"/>
			<property name="openjpa.dialect" value="${cbi4api.basu.event.store.openjpa.dialect}"/>
		</properties>
		-->
	</persistence-unit>
</persistence>