CREATE MEMORY TABLE SOURCE(ID VARCHAR(150) NOT NULL,DESCRIPTION VARCHAR(255),INET_ADDRESS VARCHAR(40),NAME VARCHAR(200) NOT NULL,PORT INTEGER)
