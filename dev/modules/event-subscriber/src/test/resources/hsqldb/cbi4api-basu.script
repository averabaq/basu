CREATE MEMORY TABLE EVENT_PAYLOAD(VALUE VARCHAR(255) NOT NULL,KEY VARCHAR(250) NOT NULL,EVENT_ID BIGINT NOT NULL,PRIMARY KEY(VALUE,KEY,EVENT_ID))
